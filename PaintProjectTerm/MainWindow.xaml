<Window x:Class="PaintProjectTerm.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PaintProjectTerm"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Canvas x:Name="paintCanvas" HorizontalAlignment="Left" Height="414" Margin="305,0,0,0" VerticalAlignment="Center" Width="485" MouseMove="Canvas_MouseMove" Background="White" MouseLeftButtonDown="paintCanvas_MouseLeftButtonDown" MouseLeftButtonUp="paintCanvas_MouseLeftButtonUp"/>
        <GroupBox HorizontalAlignment="Left" Height="69" Header="Кольори" Margin="10,10,0,0" VerticalAlignment="Top" Width="134">
            <StackPanel HorizontalAlignment="Left" Height="124" VerticalAlignment="Top" Width="124">
                <RadioButton Content="Червоний" Checked="RadioButton_Checked"/>
                <RadioButton Content="Синій" Checked="RadioButton_Checked_1"/>
                <RadioButton Content="Чорний" Checked="RadioButton_Checked_2"/>
            </StackPanel>
        </GroupBox>
        <GroupBox HorizontalAlignment="Left" Height="82" Header="Розмір" Margin="10,96,0,0" VerticalAlignment="Top" Width="134">
            <StackPanel HorizontalAlignment="Left" Height="61" VerticalAlignment="Top" Width="124">
                <RadioButton Content="Маленький" Checked="RadioButton_Checked_3"/>
                <RadioButton Content="Середній" Checked="RadioButton_Checked_4"/>
                <RadioButton Content="Великий" Checked="RadioButton_Checked_5"/>
            </StackPanel>
        </GroupBox>
        <Button Content="Очистити" HorizontalAlignment="Left" Height="22" Margin="21,210,0,0" VerticalAlignment="Top" Width="103" Click="Button_Click"/>




    </Grid>
</Window>
